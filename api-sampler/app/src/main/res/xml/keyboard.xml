<?xml version="1.0" encoding="utf-8"?>
<Keyboard
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:keyWidth="25%p"
    android:keyHeight="10%p"
    android:horizontalGap="0%p" >

    <Row android:rowEdgeFlags="top">
        <Key android:keyLabel="1" android:keyEdgeFlags="left" />
        <Key android:keyLabel="2" />
        <Key android:keyLabel="3" />
        <Key android:keyLabel="A" android:keyEdgeFlags="right" />
    </Row>

    <Row>
        <Key android:keyLabel="4" android:keyEdgeFlags="left" />
        <Key android:keyLabel="5" />
        <Key android:keyLabel="6" />
        <Key android:keyLabel="B" android:keyEdgeFlags="right" />
    </Row>

    <Row>
        <Key android:keyLabel="7" android:keyEdgeFlags="left" />
        <Key android:keyLabel="8" />
        <Key android:keyLabel="9" />
        <Key android:keyLabel="C" android:keyEdgeFlags="right" />
    </Row>

    <Row>
        <Key android:keyLabel="*" android:keyEdgeFlags="left" />
        <Key android:keyLabel="0" />
        <Key android:keyLabel="#" />
        <Key android:keyLabel="D" android:keyEdgeFlags="right" />
    </Row>

    <Row android:rowEdgeFlags="bottom">
        <Key android:keyLabel="," android:keyEdgeFlags="left" />
        <Key android:codes="-5" android:keyIcon="@android:drawable/ic_input_delete" android:keyWidth="37.5%p" android:isRepeatable="true" />
        <!--<Key android:codes="-5" android:keyIcon="@android:drawable/sym_keyboard_delete" android:keyWidth="40%p" android:keyEdgeFlags="left" />-->
        <Key android:codes="-4" android:keyLabel="DONE" android:keyWidth="37.5%p" android:keyEdgeFlags="right" />
    </Row>

</Keyboard>